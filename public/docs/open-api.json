  "components": {
    "schemas": {
      "welcomeResponseDTO": {
        "type": "string",
        "example": "Welcome, dunghd"
      },
      "addCartDTO": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the product",
            "example": "Iphone"
          },
          "qty": {
            "type": "number",
            "description": "Quantity of the product",
            "example": 1
          },
          "price": {
            "type": "number",
            "description": "Price of the product",
            "example": 1000
          },
          "billing": {
            "type": "object",
            "properties": {
              "address": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "zip": {
                "type": "number"
              },
              "country": {
                "type": "string"
              }
            },
            "required": ["city", "zip", "country"]
          }
        },
        "required": ["name", "qty"],
        "description": "Add cart DTO"
      },
      "addCartResponseDTO": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Success flag",
            "example": true
          },
          "message": {
            "type": "string",
            "description": "Message",
            "example": "Product added to cart"
          }
        },
        "required": ["success", "message"],
        "description": "Add cart response DTO"
      }
    },
    "parameters": {
      "username": {
        "name": "username",
        "in": "query",
        "description": "User name",
        "required": true,
        "schema": {
          "type": "string",
          "minLength": 6,
          "maxLength": 25
