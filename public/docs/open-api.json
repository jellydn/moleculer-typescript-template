    },
    "/api/product/cart": {
      "post": {
        "description": "Add a product to the cart",
        "tags": ["product"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/addCartDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product added to cart",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/addCartResponseDTO"
                }
              }
            }
          },
          "422": {
            "description": "Validation error"
          }
        }
      }
    }
