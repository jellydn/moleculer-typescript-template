    "/api/greeter/welcome": {
      "get": {
        "description": "Returns Welcome, a username",
        "tags": ["greeter"],
        "parameters": [
          {
            "$ref": "#/components/parameters/username",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Welcome, a username",
