{
  "name": "moleculer-typescript-template",
  "version": "0.2.0",
  "description": "My Moleculer-based microservices project",
  "keywords": [
    "microservices",
    "moleculer",
    "moleculer typescript template"
  ],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "scripts": {
    "dev": "tsup --watch --onSuccess 'node_modules/.bin/moleculer-runner --env --config dist/moleculer.config.js'",
    "start": "moleculer-runner --env --config dist/moleculer.config.js",
    "cli": "moleculer connect --env --config dist/moleculer.config.js NATS",
    "ci": "vitest --watch",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "build": "tsup --env.NODE_ENV production",
    "format": "prettier --write services test addons examples",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint --ext .ts,.js,.tsx,.jsx services test addons examples",
    "build:watch": "tsc --watch --incremental",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down",
    "generate:service": "hygen service new --name",
    "prepare": "husky install",
    "typecheck": "tsc -b"
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write",
    "package.json": [
      "prettier --write",
      "sort-package-json"
    ]
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "helmet": "7.0.0",
    "moleculer": "0.14.31",
    "moleculer-web": "0.10.6",
    "nats": "2.17.0",
    "openapi-types": "12.1.3",
    "pino": "8.16.0",
    "swagger-jsdoc": "6.2.8"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "0.4.10",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/express": "4.17.19",
    "@types/jest": "29.5.5",
    "@types/lodash": "4.14.199",
    "@types/node": "20.8.6",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/ws": "8.5.7",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "@vitest/ui": "0.34.6",
    "c8": "8.0.1",
    "eslint": "8.51.0",
    "eslint-config-productsway": "1.3.0",
    "express": "4.18.2",
    "graphql": "16.8.1",
    "graphql-ws": "5.14.1",
    "husky": "8.0.3",
    "hygen": "6.2.11",
    "lint-staged": "14.0.1",
    "moleculer-io": "2.2.0",
    "moleculer-repl": "0.7.4",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "sort-package-json": "2.6.0",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vitest": "0.34.6",
    "ws": "8.14.2"
  },
  "engines": {
    "node": ">= 18.17.x"
  },
  "tsup": {
    "entry": [
      "moleculer.config.ts",
      "logger.ts",
      "services/**/*.ts",
      "examples/**/*.ts",
      "addons/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
