{
  "name": "moleculer-typescript-template",
  "version": "0.3.0",
  "description": "My Moleculer-based microservices project",
  "keywords": [
    "microservices",
    "moleculer",
    "moleculer typescript template"
  ],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "scripts": {
    "dev": "tsup --watch --onSuccess 'node_modules/.bin/moleculer-runner --env --config dist/moleculer.config.js'",
    "dev:esm": "npx tsx watch ./server.ts",
    "start": "moleculer-runner --env --config dist/moleculer.config.js",
    "start:esm": "npx tsx ./server.ts",
    "cli": "moleculer connect --env --config dist/moleculer.config.js NATS",
    "ci": "vitest --watch",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "build": "tsup --env.NODE_ENV production",
    "format": "prettier --write services test addons examples",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint --ext .ts,.js,.tsx,.jsx services test addons examples",
    "build:watch": "tsc --watch --incremental",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down",
    "generate:service": "hygen service new --name",
    "prepare": "husky install",
    "typecheck": "tsc -b"
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write",
    "package.json": [
      "prettier --write",
      "sort-package-json"
    ]
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "helmet": "7.1.0",
    "lodash.defaultsdeep": "4.6.1",
    "moleculer": "0.14.32",
    "moleculer-web": "0.10.7",
    "moleculer-zod-validator": "3.3.1",
    "nats": "2.18.0",
    "openapi-types": "12.1.3",
    "pino": "8.16.2",
    "swagger-jsdoc": "6.2.8",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "0.4.11",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.10",
    "@types/lodash": "4.14.202",
    "@types/node": "20.10.0",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "6.12.0",
    "@typescript-eslint/parser": "6.12.0",
    "@vitest/ui": "0.34.6",
    "c8": "8.0.1",
    "eslint": "8.54.0",
    "eslint-config-productsway": "1.3.1",
    "express": "4.18.2",
    "graphql": "16.8.1",
    "graphql-ws": "5.14.2",
    "husky": "8.0.3",
    "hygen": "6.2.11",
    "lint-staged": "15.1.0",
    "moleculer-io": "2.2.0",
    "moleculer-repl": "0.7.4",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.0",
    "sort-package-json": "2.6.0",
    "tsup": "8.0.1",
    "tsx": "4.5.0",
    "typescript": "5.3.2",
    "vite": "5.0.2",
    "vitest": "0.34.6",
    "ws": "8.14.2"
  },
  "engines": {
    "node": ">= 18.17.x"
  },
  "tsup": {
    "entry": [
      "moleculer.config.ts",
      "logger.ts",
      "services/**/*.ts",
      "examples/**/*.ts",
      "addons/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
