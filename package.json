{
  "name": "moleculer-typescript-template",
  "version": "0.2.0",
  "description": "My Moleculer-based microservices project",
  "keywords": [
    "microservices",
    "moleculer",
    "moleculer typescript template"
  ],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "scripts": {
    "dev": "tsup --watch --onSuccess 'node_modules/.bin/moleculer-runner --env --config dist/moleculer.config.js'",
    "start": "moleculer-runner --env --config dist/moleculer.config.js",
    "cli": "moleculer connect --env --config dist/moleculer.config.js NATS",
    "ci": "vitest --watch",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "build": "tsup --env.NODE_ENV production",
    "format": "prettier --write services test addons examples",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint --ext .ts,.js,.tsx,.jsx services test addons examples",
    "build:watch": "tsc --watch --incremental",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down",
    "generate:service": "hygen service new --name",
    "prepare": "husky install",
    "typecheck": "tsc -b"
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write",
    "package.json": [
      "prettier --write",
      "sort-package-json"
    ]
  },
  "dependencies": {
    "dotenv": "16.1.4",
    "helmet": "7.0.0",
    "moleculer": "0.14.29",
    "moleculer-web": "0.10.5",
    "nats": "2.14.0",
    "openapi-types": "12.1.3",
    "pino": "8.14.1",
    "swagger-jsdoc": "6.2.8"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "0.2.14",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/lodash": "4.14.195",
    "@types/node": "20.2.5",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/ws": "8.5.4",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "@vitest/ui": "0.32.0",
    "c8": "7.14.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-xo": "0.43.1",
    "eslint-config-xo-typescript": "0.57.0",
    "express": "4.18.2",
    "graphql": "16.6.0",
    "graphql-ws": "5.13.1",
    "husky": "8.0.3",
    "hygen": "6.2.11",
    "lint-staged": "13.2.2",
    "moleculer-io": "2.2.0",
    "moleculer-repl": "0.7.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "sort-package-json": "2.4.1",
    "tsup": "6.7.0",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vitest": "0.32.0",
    "ws": "8.13.0"
  },
  "engines": {
    "node": ">= 14.x.x"
  },
  "tsup": {
    "entry": [
      "moleculer.config.ts",
      "logger.ts",
      "services/**/*.ts",
      "examples/**/*.ts",
      "addons/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
