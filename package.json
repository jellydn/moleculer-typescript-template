{
  "name": "moleculer-typescript-template",
  "version": "0.1.2",
  "description": "My Moleculer-based microservices project",
  "keywords": [
    "microservices",
    "moleculer",
    "moleculer typescript template"
  ],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "scripts": {
    "dev": "run-p build:ts *:watch",
    "dev:watch": "NODE_OPTIONS=--trace-warnings ts-node-dev --rs --watch services node_modules/.bin/moleculer-runner --env --config moleculer.config.ts",
    "start": "moleculer-runner --env --config dist/moleculer.config.js",
    "cli": "moleculer connect --env --config dist/moleculer.config.js NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:ts": "tsup --env.NODE_ENV production",
    "format": "prettier --write services test addons examples",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ext .ts,.js,.tsx,.jsx services test addons examples",
    "build:watch": "tsc --watch --incremental",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down",
    "generate:service": "hygen service new --name",
    "prepare": "husky install",
    "typecheck": "tsc -b"
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write",
    "package.json": [
      "prettier --write",
      "sort-package-json"
    ]
  },
  "dependencies": {
    "dotenv": "16.0.1",
    "helmet": "5.0.2",
    "moleculer": "0.14.21",
    "moleculer-web": "0.10.4",
    "nats": "2.6.1",
    "pino": "7.11.0",
    "pino-pretty": "7.6.1",
    "swagger-jsdoc": "6.2.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "16.11.35",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "5.24.0",
    "@typescript-eslint/parser": "5.24.0",
    "apollo-server-core": "3.7.0",
    "apollo-server-express": "3.7.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-xo": "0.40.0",
    "eslint-config-xo-typescript": "0.50.0",
    "express": "4.18.1",
    "graphql": "^16.5.0",
    "graphql-ws": "5.8.2",
    "husky": "8.0.1",
    "hygen": "6.2.0",
    "jest": "28.1.0",
    "jest-cli": "28.1.0",
    "jest-html-reporter": "^3.4.2",
    "lint-staged": "12.4.1",
    "moleculer-io": "^2.0.0",
    "moleculer-repl": "0.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "sort-package-json": "1.57.0",
    "ts-jest": "28.0.2",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "tsup": "5.12.7",
    "typescript": "4.6.4",
    "ws": "8.6.0"
  },
  "engines": {
    "node": ">= 14.x.x"
  },
  "tsup": {
    "entry": [
      "moleculer.config.ts",
      "logger.ts",
      "services/**/*.ts",
      "examples/**/*.ts",
      "addons/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
